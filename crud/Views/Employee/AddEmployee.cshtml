@model CRUDEF.Context.Employee
@{
    ViewBag.Title = "AddEmployee";
}

<style>
    .rederror {
        color: red;
        font-size: xx-small;
    }
</style>



<h2>Save Employee Information</h2>

@using (Html.BeginForm("CreateEmployee", "Employee", FormMethod.Post))
{
    
    <div>
        <div>
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "rederror" })
        </div>
        <br />
        <div>
            @Html.LabelFor(x => x.JoinDate)
            @Html.EditorFor(x => x.JoinDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.JoinDate, "", new { @class = "rederror" })
        </div>
        <br />
        <div>
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "rederror" })
        </div>
        <div>
            @Html.LabelFor(x => x.Cell)
            @Html.TextBoxFor(x => x.Cell, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Cell, "", new { @class = "rederror" })
        </div>
        <div>
            @Html.LabelFor(x => x.Salary)
            @Html.TextBoxFor(x => x.Salary, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Salary, "", new { @class = "rederror" })
        </div>
        <div>
            @Html.LabelFor(x => x.Designation)
            @Html.TextBoxFor(x => x.Designation, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Designation, "", new { @class = "rederror" })
        </div>
        <br />
        <div>
            <input id="saveBtn" type="submit" value="Save" class="btn btn-primary" />
        </div>



    </div>


}